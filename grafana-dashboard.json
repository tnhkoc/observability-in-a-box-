{
  "id": null,
  "uid": "eks-overview",
  "title": "EKS Cluster Overview",
  "tags": ["aws", "eks", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "graph",
      "title": "CPU Usage",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{image!=\"\"}[5m])) by (instance)",
          "legendFormat": "{{instance}}"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Memory Usage",
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes{image!=\"\"}) by (instance)",
          "legendFormat": "{{instance}}"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Pod Count",
      "targets": [
        {
          "expr": "count(kube_pod_info)",
          "legendFormat": "Total Pods"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Network Traffic",
      "targets": [
        {
          "expr": "sum(rate(container_network_transmit_bytes_total[5m])) by (instance)",
          "legendFormat": "TX - {{instance}}"
        },
        {
          "expr": "sum(rate(container_network_receive_bytes_total[5m])) by (instance)",
          "legendFormat": "RX - {{instance}}"
        }
      ],
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
    }
  ],
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "DS_PROMETHEUS",
        "label": "Prometheus",
        "query": "prometheus",
        "refresh": 1
      }
    ]
  },
  "time": {
    "from": "now-30m",
    "to": "now"
  }
}
